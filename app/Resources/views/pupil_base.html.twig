{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
    <script src="{{ asset('js/module.js') }}"></script>
    <script src="{{ asset('js/attempt.js') }}"></script>
{% endblock %}
{% block body %}
    <div class="container">
        {% set route = app.request.attributes.get('_route') %}
        <ol class="breadcrumb well">
        {% if route=="pupil_index" %}
            <li>Panel Ucznia</li>
            <li class="active">Moje wyniki</li>
        {% else %}
            <li><a href="{{ path('pupil_index') }}">Panel Ucznia</a></li>
        {% endif %}
        {% if route=="pupil_view_attempt" %}
            <li>Moje wyniki</li>
            <li class="active">Podgląd podejścia</li>
        {% endif %}
        {% if route=="teacher_session_view" %}
            <li class="active">Podgląd sesji</li>
        {% endif %}
        </ol>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4">
                        {#<div class="well well-own">#}
                            {% block sidebar %}
                                {% render(controller('AppBundle:Pupil:pupilSidebar')) %}
                            {% endblock %}
                        {#</div>#}
                    </div>
                    <div class="col-md-8">
                        {#<div class="well well-own">#}
                            <div class="panel panel-default panel-own">
                                <div class="panel-heading">
                                    {% block heading %}{% endblock %}
                                </div>
                                <div class="panel-body">
                                    {% block content %}
                                    {% endblock %}
                                </div>
                            </div>
                        {#</div>#}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}