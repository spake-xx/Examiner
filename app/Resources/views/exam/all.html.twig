{% extends 'base.html.twig' %}
{% block body %}

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Nazwa sprawdzianu</th>
        <th>Edytuj</th>
      </tr>
    </thead>
    <tbody>
    {% for exam in exams %}
      <tr>
        <td>{{ exam.id }}</td>
        <td>{{ exam.name }}</td>
        <td><a href="/web/app_dev.php/exam/edit/{{ exam.id }}">Edytuj</a></td>
        <td><a href="/web/app_dev.php/solve/exam/{{ exam.id }}">Rozwiąż</a></td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{{ form(add_exam) }}
{% endblock %}