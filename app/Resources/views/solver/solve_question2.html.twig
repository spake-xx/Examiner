{% extends 'base_ajax.html.twig' %}
{% block body %}
<div class="container" ng-controller="myCtrl" ng-init="setAttempt({{ attempt }})">

    <div class="panel panel-default">
        <div class="panel-heading">
            {#<h4>{{ attempt.quiz.name }} - NaOcene.pl</h4>#}
        </div>
        {% verbatim %}
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="well text-center">Pytanie {{answered+1}} z {{questions_count}}</div>
                    <div class="well" id="quiz-info">
                       <h1 class="text-center"><i id="spinner" class="fa fa-circle-o-notch fa-spin"></i></h1>
                       <h2 class="text-center">
                       <timer autostart="false" countdown="{% endverbatim %}{{ time }}{% verbatim %}" interval="1000"><div ng-show="hours">{{hours}} h</div> {{mminutes}} min {{sseconds}} s</timer></h2>
                    </div>

                </div>
                <div class="col-md-8">
                <div ng-show="bsAlert.msg" class="alert alert-warning ng-hide">
                  <strong>Uwaga !</strong> {{ bsAlert.msg }}
                </div>
                    <div class="well">
                        <img class="img-responsive" src="/{{ image }}" ng-show="checkImg()" />
                        <h3>{{ question }}</h3>
                        <form name="myForm">
                        <!--<label ng-repeat="x in answers" class="btn btn-primary btn-block"-->
                               <!--ng-model="$parent.user_answer.id"-->
                               <!--uib-btn-radio="x.id" style="">{{x.answer}}-->
                        <!--</label>-->
                        <label ng-repeat="x in answers" class="btn btn-primary btn-block"
                               ng-model="$parent.user_answer[x.id]"
                               uib-btn-checkbox="true" style="">{{x.answer}}
                        </label>

                        Zaznaczono: {{user_answer}}

                            <div class="form-group" style="margin-top: 20px;">
                                <input type="submit" class='btn btn-default btn-block' value="NastÄ™pne pytanie" ng-click="send(user_answer)" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endverbatim %}
</div>
    <script>
       $('.btn').button();
    </script>
{% endblock %}