{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <ol class="breadcrumb well">{{ app.request.get('name') }}

            <li><a href="{{ path('teacher_index') }}">Panel Nauczyciela</a></li>
            <li><a href="{{ path('editQuiz', {'id':quiz.id}) }}">Edycja sprawdzianu</a></li>
            <li><a href="{{ path('editQuestion', {'question':question.id}) }}">Edycja pytania</a></li>
            <li class="active">Edycja tre≈õci pytania</li>
        </ol>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="well well-own">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title text-center">{{ quiz.name }}</h3>
                                </div>
                                <div class="panel-body panel-own">
                                    <ul class="nav nav-pills nav-stacked">
                                        {% for q in questions %}
                                            <li><a href="{{ path('editQuestion', {'question':q.id}) }}">{{ q.question }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title text-center">Add question</h3>
                                </div>
                                <div class="panel-body panel-own">
                                    {{ form_start(add_question) }}
                                    {{ form_widget(add_question.question, { 'attr': {'class':'form-control', 'placeholder':'new question'} }) }}
                                    {{ form_widget(add_question.save, { 'attr': {'class':'btn btn-default btn-block'} }) }}
                                    {{ form_widget(add_question._token) }}
                                    {{ form_end(add_question) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="well well-own">
                            {{ form_start(editQuestion) }}
                                {{ form_widget(editQuestion.question, {attr:{'class':'form-control','placeholder':'Question'}}) }}
                                {{ form_widget(editQuestion.save, {attr:{'class':'btn btn-default btn-block','value':'UPDATE'}}) }}
                            {{ form_end(editQuestion) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}