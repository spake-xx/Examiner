{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-offset-3 col-md-6">
    <div class="well">
        <div class="panel panel-default">
        <div class="panel-heading text-center">
            Examiner - Register
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
                <div class="row form-group">
                    <div class="col-md-6">
                        {{ form_widget(form.firstname, { 'attr': {'placeholder': 'Imię', 'class':'form-control'} }) }}
                        {% if form_errors(form.firstname) %}
                            <div class="alert alert-danger">{{ form_errors(form.firstanem) }}</div>
                        {% endif %}
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.lastname, { 'attr': {'placeholder': 'Nazwisko', 'class':'form-control'} }) }}
                        {% if form_errors(form.lastname) %}
                            <div class="alert alert-danger">{{ form_errors(form.lastname) }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-6">
                        {{ form_widget(form.email, { 'attr': {'placeholder': 'email', 'class':'form-control'} }) }}
                        {% if form_errors(form.email) %}
                            <div class="alert alert-danger">{{ form_errors(form.email) }}</div>
                        {% endif %}
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.username, { 'attr': {'placeholder': 'Nazwa użytkownika', 'class':'form-control'} }) }}
                        {% if form_errors(form.username) %}
                            <div class="alert alert-danger">{{ form_errors(form.username) }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-6">
                        {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'hasło', 'class':'form-control'} }) }}
                        {% if form_errors(form.plainPassword.first) %}
                            <div class="alert alert-danger">{{ form_errors(form.plainPassword.first) }}</div>
                        {% endif %}
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'powtórz hasło', 'class':'form-control'} }) }}
                        {% if form_errors(form.plainPassword.second) %}
                            <div class="alert alert-danger">{{ form_errors(form.plainPassword.second) }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-default btn-block" value="{{ 'Rejestruj'|trans }}" />
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

