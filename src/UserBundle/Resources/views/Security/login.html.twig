{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-6 col-md-offset-3">
    <div class="well">
        <div class="panel panel-default">
        <div class="panel-heading text-center">
            Logowanie
        </div>
        <div class="panel-body">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% for m in app.session.flashbag.get('notice') %}
                <div class="alert alert-success">{{ m }}</div>
            {% endfor %}

            <form action="{{ path("fos_user_security_check") }}" method="post">
                    <div class="row form-group">
                        <div class="col-md-6">
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
                        </div>
                        <div class="col-md-6">
                            <input type="password" id="password" name="_password" required="required" class="form-control"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group" data-toggle="buttons">
                                <label class="btn btn-default btn-block">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> ZapamiÄ™taj mnie
                                </label>
                        </div>
                        <div class="col-md-12">
                            <input type="submit" id="_submit" name="_submit" class="btn btn-block btn-default" value="{{ 'Login' }}" />
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
